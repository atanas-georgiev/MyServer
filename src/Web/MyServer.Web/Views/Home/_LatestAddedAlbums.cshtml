@using MyServer.Web.Models.Home
<div class="well well-mobile">
    <div>
        <h4 class="text-center">@LocString["LatestAlbums"]</h4>
        @{
            var albums = ViewData["LatestAlbums"] as IQueryable<HomeAlbumViewModel>;
            <br/>
            if (albums != null)
            {
                <table class="table">
                    <tr>
                        <th>@LocString["Name"]</th>
                        <th>@LocString["AddedOn"]</th>
                        <th>@LocString["Images"]</th>
                    </tr>
                    @foreach (var album in albums.OrderByDescending(x => x.CreatedOn).Take(5))
                    {
                        <tr>
                            <td class="col-md-5">
                                <a asp-area="ImageGallery" asp-controller="Album" asp-action="Details" asp-route-id="@album.Id">
                                    @album.Title
                                </a>
                            </td>
                            <td class="col-md-5">@album.CreatedOn.ToString("dd MMMM yyyy")</td>
                            <td class="col-md-2">@album.ImagesCountCover</td>
                        </tr>
                    }
                </table>
            }

            <a asp-area="ImageGallery" asp-controller="Album" asp-action="Index">
                <h5 class="text-center">@LocString["AllAlbums"]</h5>
            </a>
        }
    </div>
</div>