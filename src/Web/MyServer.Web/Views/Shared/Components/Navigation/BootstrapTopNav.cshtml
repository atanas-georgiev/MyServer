@using cloudscribe.Web.Navigation
@using Microsoft.Extensions.Localization
@using MyServer.Web.Helpers
@model NavigationViewModel
@inject IStringLocalizer<SharedResource> SharedLocalizer
@if (Model.HasVisibleChildren(Model.RootNode))
{
    <ul class="nav navbar-nav">
        <li class='@Model.GetClass(Model.RootNode.Value)'><a href="@Url.Content(Model.AdjustUrl(Model.RootNode))">@Html.Raw(Model.GetIcon(Model.RootNode.Value))@Model.AdjustText(Model.RootNode)</a></li>
        @foreach (var node in Model.RootNode.Children)
        {
            if (!Model.ShouldAllowView(node)) { continue; }
            <li class='@Model.GetClass(node.Value)'><a href="@Url.Content(Model.AdjustUrl(node))">@Html.Raw(Model.GetIcon(node.Value))@Model.AdjustText(node)</a></li>
        }
    </ul>
}
