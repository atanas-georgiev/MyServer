<script src="https://kendo.cdn.telerik.com/2017.2.621/js/kendo.aspnetmvc.min.js"></script>

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.ToString();
    var cultureKendoScript = "https://kendo.cdn.telerik.com/2017.2.621/js/cultures/kendo.culture." + culture + ".min.js";
}

<script src="@cultureKendoScript"></script>
<script>kendo.culture("@culture");</script>
