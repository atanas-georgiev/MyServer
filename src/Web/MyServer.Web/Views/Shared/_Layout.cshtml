@using Microsoft.ApplicationInsights.Extensibility
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.ViewFeatures

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-material-design/dist/css/bootstrap-material-design.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-material-design/dist/css/ripples.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/justified-gallery/dist/justified-gallery.min.css"/>
        <link rel="stylesheet" href="~/lib/image-picker/dist/image-picker.css"/>
        <link href="~/lib/lightgallery/dist/css/lightgallery.css" rel="stylesheet"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
    @RenderSection("styles", required: false)
</head>
<body>
<header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">@LocString["Title"]</a>
                <a asp-area="" asp-controller="Home" asp-action="SetLanguage" asp-route-culture="bg-BG" asp-route-returnUrl="@Context.Request.Path" class="navbar-brand"><img src="~/img/bg-icon.png" /></a>
                <a asp-area="" asp-controller="Home" asp-action="SetLanguage" asp-route-culture="en-US" asp-route-returnUrl="@Context.Request.Path" class="navbar-brand"><img src="~/img/us-icon.png" /></a>
            </div>
            <div class="navbar-collapse collapse navbar-inverse-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">@LocString["Home"]</a>
                    </li>
                    <li>
                        <a asp-area="ImageGallery" asp-controller="Album" asp-action="Index" class="nav-link">@LocString["Albums"]</a>
                    </li>
                    @if (User.IsInRole(MyServer.Common.MyServerRoles.Admin))
                    {
                        <li class="dropdown">
                            <a href="#" data-target="#" class="dropdown-toggle" data-toggle="dropdown">
                                @LocString["Admin"]
                                <b class="caret"></b><div class="ripple-container"></div>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="ImageGalleryAdmin" asp-controller="Album" asp-action="Index">@LocString["Albums"]</a>
                                </li>           
                            </ul>
                        </li>
                    }
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
