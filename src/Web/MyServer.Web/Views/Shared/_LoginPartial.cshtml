@using Microsoft.AspNetCore.Identity
@using MyServer.Data.Models
@using MyServer.Models

@inject SignInManager<MyServer.Data.Models.User> SignInManager
@inject UserManager<MyServer.Data.Models.User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Account" asp-controller="Login" asp-action="Exit" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Account" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Account" asp-controller="Register" asp-action="Index">Register</a></li>
        <li><a asp-area="Account" asp-controller="Login" asp-action="Index">Log in</a></li>
    </ul>
}
