@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.ToString();
}
<environment names="Development">
    <script src="~/lib/kendo-ui/js/kendo.all.min.js"></script>
    <script src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js"></script>
    <script src="@Url.Content("~/lib/kendo-ui/js/cultures/kendo.culture." + culture + ".min.js")"></script>
    <script>kendo.culture("@culture");</script>
</environment>
<environment names="Staging,Production">
    <script src="~/lib/kendo-ui/js/kendo.all.min.js"
            asp-fallback-src="~/lib/kendo-ui/js/kendo.all.min.js"
            asp-fallback-test="window.kendo">


    
    </script>
    <script src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js"
            asp-fallback-src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js"
            asp-fallback-test="kendo.data.transports['aspnetmvc-ajax']">


    
    </script>
    <script src="@Url.Content("~/lib/kendo-ui/js/cultures/kendo.culture." + culture + ".min.js")"></script>
    <script>kendo.culture("@culture");</script>
</environment>