@using MyServer.Web.Areas.ImageGalleryAdmin.Models.Image
@model MyServer.Web.Areas.ImageGalleryAdmin.Models.Image.ImageUpdateViewModel
<div class="form-horizontal text-center">
    <button class="btn image-edit-box-title-btn" data-toggle="modal" data-target="#image-edit-box-title-modal">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    </button>
    <button class="btn image-edit-box-date-btn" data-toggle="modal" data-target="#image-edit-box-date-modal">
        <i class="fa fa-calendar" aria-hidden="true"></i>
    </button>
    <button class="btn image-edit-box-location-btn" data-toggle="modal" data-target="#image-edit-box-location-modal">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
    </button>
    <a asp-action="UpdateAlbumCover" asp-controller="Album" asp-route-area="ImageGalleryAdmin" @*asp-route-id="@item.RoleID " *@ data-ajax="true" data-ajax-method="POST" class="btn image-edit-box-cover-btn">
        <i class="fa fa-file-image-o" aria-hidden="true"></i>
    </a>
    <a asp-action="DeleteImages" asp-controller="Album" asp-route-area="ImageGalleryAdmin" @*asp-route-id="@item.RoleID " *@ data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#image-list-box" class="btn image-edit-box-delete-btn" data-ajax-success="ImageListUpdate">
        <i class="fa fa-times" aria-hidden="true"></i>
    </a>
    <a asp-action="RotateImagesLeft" asp-controller="Album" asp-route-area="ImageGalleryAdmin" asp-route-id="" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#image-list-box" class="btn image-edit-box-rotate-left-btn" data-ajax-success="ImageListUpdate">
        <i class="fa fa-undo" aria-hidden="true"></i>
    </a>
    <a asp-action="RotateImagesRight" asp-controller="Album" asp-route-area="ImageGalleryAdmin" asp-route-id="" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#image-list-box" class="btn image-edit-box-rotate-right-btn" data-ajax-success="ImageListUpdate">
        <i class="fa fa-repeat" aria-hidden="true"></i>
    </a>
</div>
<div class="modal fade" id="image-edit-box-title-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateImageTitle" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#image-list-box" data-ajax-success="ImageListUpdate">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Items, new { @class = "image-edit-box-modal-ids" })
                @Html.TextBoxFor(m => m.Data, new { @class = "form-control image-edit-box-modal-title" })
                <button type="submit" class="btn image-edit-box-modal-title-close">
                    <span class="glyphicon glyphicon-ok"></span></button>
            </form>
            <button class="btn image-edit-box-modal-title-close">
                <span class="glyphicon glyphicon-remove"></span></button>
        </div>
    </div>
</div>
<div class="modal fade" id="image-edit-box-location-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateImageLocation" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#image-list-box" data-ajax-success="ImageListUpdate">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Items, new { @class = "image-edit-box-modal-ids" })
                @Html.TextBoxFor(m => m.Data, new { @class = "form-control image-edit-box-modal-location" })
                <button type="submit" class="btn image-edit-box-modal-location-close">
                    <span class="glyphicon glyphicon-ok"></span></button>
            </form>
            <button class="btn image-edit-box-modal-location-close">
                <span class="glyphicon glyphicon-remove"></span></button>
        </div>
    </div>
</div>
<div class="modal fade" id="image-edit-box-date-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateImageDate" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#image-list-box" data-ajax-success="ImageListUpdate">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Items, new { @class = "image-edit-box-modal-ids" })
                @Html.TextBoxFor(m => m.Data, new { @class = "form-control", id = "image-edit-box-modal-date" })
                <button type="submit" class="btn image-edit-box-modal-date-close">
                    <span class="glyphicon glyphicon-ok"></span></button>
            </form>
            <button class="btn image-edit-box-modal-date-close">
                <span class="glyphicon glyphicon-remove"></span></button>
        </div>
    </div>
</div>
