@model int

@{
    ViewData["Title"] = SharedLocalizer["Error"];
}

<div class="well well-mobile">
    <div class="text-center">
        <img src="~/img/error.png" alt="@SharedLocalizer["Error"]" class="img-error"/>
        <br />
            @switch (Model)
            {
                case 404:
                    <span class="text-error">@SharedLocalizer["ErrorNotFound"]</span>
                    break;
                default:
                    <span class="text-error">@SharedLocalizer["ErrorCritical"]</span>
                    break;
            }
    </div>  
</div>
