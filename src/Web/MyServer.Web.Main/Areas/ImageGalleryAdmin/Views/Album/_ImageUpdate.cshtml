@model MyServer.Web.Main.Areas.ImageGalleryAdmin.Models.Image.ImageUpdateViewModel

<div class="form-horizontal">

    <button class="btn image-edit-box-title-btn" data-toggle="modal" data-target="#image-edit-box-title-modal">Title</button>
    <button class="btn image-edit-box-date-btn">Date</button>
    <button class="btn image-edit-box-location-btn">Location</button>
    <button class="btn image-edit-box-cover-btn">Cover</button>
    <button class="btn image-edit-box-delete-btn">Delete</button>

</div>

<div class="modal fade" id="image-edit-box-title-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-body row"></div>
                @using (Ajax.BeginForm("UpdateImageTitle", new AjaxOptions { UpdateTargetId = "result", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Items, new { @class = "image-edit-box-modal-ids" })
                    @Html.TextBoxFor(m => m.Data, new { @class = "form-control image-edit-box-modal-title" })
                    <button type="submit" class="btn image-edit-box-modal-close"><span class="glyphicon glyphicon-ok"></span></button>
                    <button class="btn image-edit-box-modal-close"><span class="glyphicon glyphicon-remove"></span></button>
                }
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

<script>
    
</script>

